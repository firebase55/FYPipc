<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#B5B2B2"
    android:layout_height="match_parent"
    tools:context=".addnewproject.addnewProject">
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="5"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight=".5"
            android:orientation="horizontal"
            android:background="#8A8888"
            android:weightSum="3"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:onClick="back"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="@drawable/cross"
                android:layout_height="30dp">

            </ImageView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2.4"
                android:textColor="#fff"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="Add new Project"
                android:layout_height="40dp">

            </TextView>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:background="@drawable/check"
                android:layout_height="30dp">

            </ImageView>



        </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_weight=".5"
           android:layout_marginTop="3dp"
           android:layout_height="0dp">
           <EditText
               android:layout_width="match_parent"
               android:hint="Name..."
               android:padding="10dp"
               android:layout_marginRight="4dp"
               android:layout_marginLeft="4dp"
               android:background="@drawable/newdesign"
               android:layout_height="match_parent">

           </EditText>

       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight=".3"
            android:weightSum="2"
            android:background="#fff"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_height="0dp">
            <TextView
                android:layout_width="0dp"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_weight="1.7"
                android:gravity="start"
                android:layout_marginLeft="10dp"
                android:text="Project Manager"
                android:layout_height="40dp">

            </TextView>
            <TextView
                android:layout_width="0dp"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_weight=".2"
                android:layout_marginRight="10dp"
                android:background="@drawable/add"
                android:gravity="end"
                android:layout_height="40dp">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight=".5"
            android:background="#fff"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="40dp"
                android:background="@drawable/cemra"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_height="40dp">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight=".5"
            android:weightSum="2"
            android:background="#fff"
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:layout_height="0dp">
            <TextView
                android:layout_width="match_parent"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:gravity="start"
                android:layout_marginLeft="10dp"
                android:text="Constractor"
                android:layout_height="30dp">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:gravity="start"
                android:text="Techrasoft"
                android:layout_height="40dp">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight=".5"
            android:weightSum="2"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:orientation="horizontal"
            android:layout_height="0dp">
            <TextView
                android:layout_width="0dp"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:gravity="start"
                android:onClick="start_date"
                android:layout_marginLeft="10dp"
                android:text="Start Date "
                android:layout_height="40dp">

            </TextView>
            <View
                android:layout_width="4dp"
                android:background="@drawable/add"
                android:layout_height="4dp">

            </View>
            <TextView
                android:layout_width="0dp"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:id="@+id/setstatrt_date"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:gravity="end"
                android:text="1022-4-7"
                android:layout_height="40dp">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:weightSum="2"
            android:background="#fff"
            android:orientation="horizontal"
            android:layout_height="0dp">
            <TextView
                android:layout_width="0dp"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:id="@+id/end_id"
                android:onClick="end_date"
                android:gravity="start"
                android:layout_marginLeft="10dp"
                android:text="End Date"
                android:layout_height="40dp">

            </TextView>
            <View
                android:layout_width="4dp"
                android:background="@drawable/add"
                android:layout_height="4dp">

            </View>
            <TextView
                android:layout_width="0dp"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:id="@+id/end_date"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:gravity="end"
                android:text="1022-4-7"
                android:layout_height="40dp">

            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>